# JWT Configuration
JWT_SECRET_KEY=your-secret-key-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# Database Configuration (PostgreSQL)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/theone_db
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10
DATABASE_POOL_TIMEOUT=30

# MongoDB Configuration
MONGODB_URL=mongodb://admin:admin@localhost:27017/theone_db?authSource=admin
MONGODB_DATABASE=theone_db

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_DECODE_RESPONSES=true
REDIS_SOCKET_TIMEOUT=5
REDIS_SOCKET_CONNECT_TIMEOUT=5

# RabbitMQ Configuration
RABBITMQ_URL=amqp://admin:admin@localhost:5672/
RABBITMQ_EXCHANGE=theone_exchange
RABBITMQ_QUEUE_PREFIX=theone
RABBITMQ_PREFETCH_COUNT=10

# Application Settings
APP_NAME=theone-serviceee
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=DEBUG
SERVICE_NAME=auth-service
JSON_OUTPUT=false
LOG_FILE=./log.txt
